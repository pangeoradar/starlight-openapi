---
import type { OperationHttpMethod } from '../../libs/operation'

import OperationMethodTag from './OperationMethodTag.astro'

interface Props {
  method: OperationHttpMethod
  path?: string
}

const { method, path } = Astro.props
---

<div class="method-path">
  <OperationMethodTag {method} />
  <span class="path">{path}</span>
</div>

<style>
  

  .method-path {
    display: flex;
    gap: 0.8rem;
    overflow-x: hidden;
  }

  .path {
    display: flex;
    flex-grow: 0;
    flex-shrink: 1;
    overflow-x: auto;
    margin-top: 0;
  }
</style>
