---
import {
    isSchemaObjectObject,
    Properties,
    SchemaObject
} from '../../libs/schemaObject'
import SchemaRow from './SchemaRow.astro'


interface Props {
  parent: SchemaObject
  properties: Properties
  required: string[] | undefined
  nested?: boolean | undefined;
}

const { nested, parent, properties, required } = Astro.props

---
{
  Object.entries(properties).map(([name, schema]) => (
    <SchemaRow name={name} {nested} schema={schema} parent={parent} properties={properties} required={required}></SchemaRow>
  ))
}