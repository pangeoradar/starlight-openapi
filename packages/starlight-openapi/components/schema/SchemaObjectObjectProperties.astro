---
import {
    isSchemaObjectObject,
    Properties,
    SchemaObject
} from '../../libs/schemaObject'
import SchemaRow from './SchemaRow.astro'
import {StarlightOpenAPISchemaConfig} from "../../libs/schema";


interface Props {
  parent: SchemaObject
  properties: Properties
  required: string[] | undefined
  nested?: boolean | undefined;
  config?: StarlightOpenAPISchemaConfig
}

const { nested, parent, properties, required,config } = Astro.props

---
{
  Object.entries(properties).map(([name, schema]) => (
    <SchemaRow name={name} {config} {nested} {schema} {parent} {properties} {required}></SchemaRow>
  ))
}